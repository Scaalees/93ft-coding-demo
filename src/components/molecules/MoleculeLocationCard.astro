---
import AtomButton from "../atoms/AtomButton.astro";

interface Props {
  image: string
  location: string
}

const { image, location } = Astro.props
---
<div class="flex flex-col md:w-[292px] md:h-[389px] relative overflow-hidden group">
  <img src={image} alt={location} class="absolute h-100 w-100 object-cover" />
  <div class="group-hover:from-black/25 bg-gradient-to-t from-transparent to-transparent transition-colors absolute w-100 h-100"></div>
  <div class="absolute z-1 w-[calc(100%-48px)] flex flex-col left-6 transition-transform 
    -bottom-12.5 group-hover:-translate-y-18">
    <h4 class="text-2xl uppercase tracking-wider mb-2">{ location }</h4>
    <AtomButton variant="secondary" class:list={'w-100'}>
      View our Rooms
    </AtomButton>
  </div>
</div>