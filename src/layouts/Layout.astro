---
import '../styles/global.css'
import OrganismPageLoader from '../components/organisms/OrganismPageLoader.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>93FT Demo</title>
  </head>
  <body class="bg-dark text-cream px-6 md:px-0">
    <OrganismPageLoader />
    <slot />

    <script>
      window.addEventListener('loader:complete', () => {
        document.body.classList.add('loaded')
      })
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
